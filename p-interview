        }
        
        .summary-question {
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 10px;
            font-size: 1.05em;
        }
        
        .summary-answer {
            color: #555;
            line-height: 1.6;
            white-space: pre-wrap;
        }
        
        .summary-section {
            margin-top: 50px;
            margin-bottom: 25px;
        }
        
        .summary-section-title {
            color: #1a1a1a;
            font-size: 1.6em;
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 20px;
        }
        
        .important-info-section {
            margin-top: 60px;
            padding-top: 40px;
            border-top: 2px solid #e0e0e0;
        }
        
        .important-info-title {
            color: #1a1a1a;
            font-size: 1.8em;
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 30px;
            text-align: center;
        }
        
        .important-info-title::before {
            content: "‚ÑπÔ∏è ";
            margin-right: 10px;
        }
        
        .disclaimer-item {
            margin-bottom: 25px;
            padding: 24px;
            background: linear-gradient(135deg, #fff9e6 0%, #fff4d6 100%);
            border-radius: 12px;
        }
        
        .disclaimer-item h3 {
            color: #1a1a1a;
            font-size: 1.2em;
            margin-bottom: 12px;
            font-weight: 600;
        }
        
        .disclaimer-item p {
            color: #555;
            line-height: 1.7;
        }
        
        .btn-print {
            background-color: #e74c3c;
            color: white;
            margin-top: 30px;
        }
        
        .btn-print:hover {
            background-color: #c0392b;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }
        
        .btn-restart {
            background-color: #95a5a6;
            color: white;
            margin-top: 30px;
            margin-left: 12px;
        }
        
        .btn-restart:hover {
            background-color: #7f8c8d;
        }
        
