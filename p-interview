<body>
    <div class="container">
        <div class="header">
            <h1>üìã Student Interview</h1>
            <p>Let's get to know each other and plan your perfect learning journey!</p>
        </div>
        
        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>
        
        <div id="questionsContainer"></div>
        
        <div class="summary" id="summary"></div>
    </div>
    
    <script>
        const questions = [
            {
                section: "üéØ GOALS AND MOTIVATION",
                items: [
                    {
                        q: "Should the lessons be mainly in English? How much English, how much Polish?",
                        options: ["Mostly English, some Polish", "50/50", "Mostly Polish, some English", "Flexible - depends on topic"]
                    },
                    {
                        q: "What is your main learning goal?",
                        options: ["Exam preparation", "Job interview", "Travel", "Living abroad", "Career development", "General improvement"]
                    },
                    {
                        q: "In what specific situations will you use the language?",
                        options: ["Business meetings", "Presentations", "Everyday conversations", "Travel", "Work emails", "Academic writing"]
                    },
                    {
                        q: "What motivates you to learn English right now?"
                    },
                    {
                        q: "What do you want to focus on most in learning English?",
                        options: ["Fluency", "Confidence", "Grammatical accuracy", "Pronunciation", "Vocabulary", "Listening comprehension"]
                    },
                    {
                        q: "In what timeframe do you want to achieve your goals?",
                        options: ["1-3 months", "3-6 months", "6-12 months", "1+ year", "No specific deadline"]
                    }
                ]
            },
            {
                section: "üìä LEVEL AND EXPERIENCE",
                items: [
                    {
                        q: "How do you assess your current level according to the CEFR scale?",
                        hint: "A1 - beginner, A2 - elementary, B1 - intermediate, B2 - upper-intermediate, C1 - advanced, C2 - proficiency",
                        options: ["A1 - Beginner", "A2 - Elementary", "B1 - Intermediate", "B2 - Upper-intermediate", "C1 - Advanced", "C2 - Proficiency"]
                    },
                    {
                        q: "How do you rate your confidence when speaking in this language?",
                        hint: "scale 1-10 or descriptive",
                        options: ["1-2 (Very low)", "3-4 (Low)", "5-6 (Medium)", "7-8 (Good)", "9-10 (Very confident)"]
                    },
                    {
                        q: "What were your previous experiences learning English? What worked and what didn't?"
                    },
                    {
                        q: "What is currently the most difficult for you in learning English?",
                        options: ["Listening comprehension", "Speaking", "Writing", "Grammar", "Vocabulary", "Pronunciation"]
                    },
                    {
                        q: "Are you familiar with grammatical terminology?",
                        hint: "e.g. are concepts like Present Perfect, modal verbs, conditional sentences familiar to you, pronouns, verbs, adjectives",
                        options: ["Yes, very familiar", "Somewhat familiar", "Basic knowledge", "Not familiar at all"]
                    }
                ]
            },
            {
                section: "üé® LEARNING STYLE AND PREFERENCES",
                items: [
                    {
                        q: "How do you like to learn? What activities or teaching methods do you like?",
                        options: ["Games", "Videos", "Reading articles", "Role-playing", "Discussions", "Podcasts", "Grammar exercises"]
                    },
                    {
                        q: "What activities or teaching methods do you not like?"
                    },
                    {
                        q: "Do you plan to dedicate time to independent study or homework between lessons?",
                        options: ["Yes, regularly (daily)", "Yes, occasionally (few times a week)", "Maybe sometimes", "No, only during lessons"]
                    },
                    {
                        q: "Do you use any learning applications?",
                        hint: "e.g. Anki, Duolingo, Quizlet, others"
                    },
                    {
                        q: "Should I explain everything in detail (all grammatical and phonetic nuances, etc.), or should we focus more on the practical application of English? What level of learning precision do you prefer?",
                        options: ["Very detailed explanations", "Balanced approach", "Practical application focus", "Minimal theory, maximum practice"]
                    }
                ]
            },
            {
                section: "‚öôÔ∏è TECHNICAL ASPECTS",
                items: [
                    {
                        q: "How often would you like to have lessons and at what time?",
                        hint: "e.g. 2x per week in the evenings, weekends"
                    },
                    {
                        q: "What device will you mainly use during lessons?",
                        options: ["Phone", "Tablet", "PC/Laptop"]
                    },
                    {
                        q: "Are you open to using additional software (such as HopToDesk) for a better interactive learning experience?",
                        options: ["Yes, definitely", "Yes, if necessary", "Maybe", "Prefer not to"]
                    },
                    {
                        q: "Do you print materials or do you prefer digital versions?",
                        options: ["Print materials", "Digital versions", "Both", "No preference"]
                    }
                ]
            },
            {
                section: "üåü PERSONALIZATION",
                items: [
                    {
                        q: "What are your hobbies and interests?"
                    },
                    {
                        q: "What movies, series or music do you like?"
                    }
                ]
            },
            {
                section: "üí¨ ADDITIONAL INFORMATION",
                items: [
                    {
                        q: "Do you have any concerns, boundaries or difficulties (e.g. health-related) that I should know about?"
                    },
                    {
                        q: "Is there anything else you would like to tell me about your expectations or needs?"
                    }
                ]
            }
        ];
        
        const disclaimers = [
            {
                title: "üí¨ Feedback and Constructive Criticism",
                text: "I am open to constructive criticism expressed with respect. Please don't be afraid to share your thoughts about what you consider inappropriate in my teaching style. Feedback allows me to grow."
            },
            {
                title: "‚úÖ Don't Be Afraid to Make Mistakes",
                text: "Please don't be afraid to make mistakes. It doesn't matter how incorrectly you speak, what matters is that you speak. Don't expect criticism or unpleasant reactions from me. I'm here to help you, not to be critical. So don't be afraid to say that you don't understand something or forgot something, even if we've explained it several times. I'm not a critical person, quite the opposite, and I want every student to feel comfortable during lessons with me."
            },
            {
                title: "üîÑ Flexibility and Adjustments",
                text: "If during our collaboration you feel that something in our lessons should change (pace, methods, materials), let me know. The lessons are for you, so I want them to be as effective as possible."
            }
        ];
        
        let currentQuestion = 0;
        let totalQuestions = 0;
        let answers = {};
        let flatQuestions = [];
        let currentDisclaimerIndex = 0;
        let showingDisclaimers = false;
        
        // Flatten questions
        questions.forEach(section => {
            section.items.forEach(item => {
                flatQuestions.push({
                    section: section.section,
                    question: item.q,
                    hint: item.hint || "",
                    options: item.options || []
                });
            });
        });
        
        totalQuestions = flatQuestions.length;
        
        function renderQuestion(index) {
            const container = document.getElementById('questionsContainer');
            const q = flatQuestions[index];
            const isNewSection = index === 0 || flatQuestions[index - 1].section !== q.section;
            
            let optionsHTML = '';
            if (q.options.length > 0) {
                optionsHTML = '<div class="options">';
                q.options.forEach((option, i) => {
                    const checkId = `opt${index}_${i}`;
                    optionsHTML += `
                        <div class="option">
                            <input type="checkbox" id="${checkId}" value="${option}">
                            <label for="${checkId}">${option}</label>
                        </div>
                    `;
                });
                optionsHTML += '</div>';
            }
            
            container.innerHTML = `
                <div class="question-container active">
                    ${isNewSection ? `<div class="section-title">${q.section}</div>` : ''}
                    <div class="question-number">Question ${index + 1} of ${totalQuestions}</div>
                    <div class="question">${q.question}</div>
                    ${q.hint ? `<div class="hint">${q.hint}</div>` : ''}
                    ${optionsHTML}
                    <textarea id="answer${index}" placeholder="Your notes and additional information...">${answers[index]?.text || ''}</textarea>
                    <div class="navigation">
                        ${index > 0 ? '<button class="btn-prev" onclick="prevQuestion()">‚Üê Previous</button>' : '<div></div>'}
                        ${index < totalQuestions - 1 
                            ? '<button class="btn-next" onclick="nextQuestion()">Next ‚Üí</button>' 
                            : '<button class="btn-next" onclick="startDisclaimers()">Next ‚Üí</button>'}
                    </div>
                </div>
            `;
            
            // Restore checkbox states
            if (answers[index]?.selected) {
                answers[index].selected.forEach(val => {
                    const checkbox = Array.from(document.querySelectorAll('input[type="checkbox"]'))
                        .find(cb => cb.value === val);
                    if (checkbox) checkbox.checked = true;
                });
            }
            
            updateProgress();
        }
        
        function renderDisclaimer(index) {
            const container = document.getElementById('questionsContainer');
            const disclaimer = disclaimers[index];
            
            container.innerHTML = `
                <div class="question-container active">
                    <div class="disclaimer-screen">
                        <h2>${disclaimer.title}</h2>
                        <p>${disclaimer.text}</p>
                        <div class="navigation" style="justify-content: center;">
                            ${index < disclaimers.length - 1 
                                ? '<button class="btn-next" onclick="nextDisclaimer()">Next ‚Üí</button>' 
                                : '<button class="btn-finish" onclick="showSummary()">Finish ‚úì</button>'}
                        </div>
                    </div>
                </div>
            `;
            
            updateProgress();
        }
        
        function updateProgress() {
            const totalSteps = totalQuestions + disclaimers.length;
            const currentStep = showingDisclaimers ? totalQuestions + currentDisclaimerIndex + 1 : currentQuestion + 1;
            const progress = (currentStep / totalSteps) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }
        
        function saveAnswer() {
            if (!showingDisclaimers) {
                const textarea = document.getElementById(`answer${currentQuestion}`);
                const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
                const selected = Array.from(checkboxes).map(cb => cb.value);
                
                answers[currentQuestion] = {
                    text: textarea ? textarea.value : '',
                    selected: selected
                };
            }
        }
        
        function nextQuestion() {
            saveAnswer();
            if (currentQuestion < totalQuestions - 1) {
                currentQuestion++;
                renderQuestion(currentQuestion);
            }
        }
        
        function prevQuestion() {
            saveAnswer();
            if (currentQuestion > 0) {
                currentQuestion--;
                renderQuestion(currentQuestion);
            }
        }
        
        function startDisclaimers() {
            saveAnswer();
            showingDisclaimers = true;
            currentDisclaimerIndex = 0;
            renderDisclaimer(0);
        }
        
        function nextDisclaimer() {
            if (currentDisclaimerIndex < disclaimers.length - 1) {
                currentDisclaimerIndex++;
                renderDisclaimer(currentDisclaimerIndex);
            }
        }
        
        function showSummary() {
            document.getElementById('questionsContainer').style.display = 'none';
            document.querySelector('.progress-bar').style.display = 'none';
            
            const summaryDiv = document.getElementById('summary');
            let summaryHTML = '<h2 style="text-align: center; margin-bottom: 40px; color: #1a1a1a; font-size: 2em;">üìä Interview Summary</h2>';
            
            let currentSection = '';
            flatQuestions.forEach((q, index) => {
                if (q.section !== currentSection) {
                    if (currentSection !== '') {
                        summaryHTML += '</div>';
                    }
                    summaryHTML += `
                        <div class="summary-section">
                            <div class="summary-section-title">${q.section}</div>
                        </div>
                        <div>
                    `;
                    currentSection = q.section;
                }
                
                let answerText = '';
                if (answers[index]) {
                    if (answers[index].selected.length > 0) {
                        answerText = '<strong>Selected:</strong> ' + answers[index].selected.join(', ');
                        if (answers[index].text) {
                            answerText += '<br><br><strong>Notes:</strong> ' + answers[index].text;
                        }
                    } else {
                        answerText = answers[index].text || '<em style="color: #999;">No answer</em>';
                    }
                } else {
                    answerText = '<em style="color: #999;">No answer</em>';
                }
                
                summaryHTML += `
                    <div class="summary-item">
                        <div class="summary-question">${index + 1}. ${q.question}</div>
                        <div class="summary-answer">${answerText}</div>
                    </div>
                `;
            });
            
            summaryHTML += '</div>';
            
            // Add disclaimers
            summaryHTML += '<div class="important-info-section">';
            summaryHTML += '<div class="important-info-title">IMPORTANT INFORMATION</div>';
            disclaimers.forEach((disclaimer) => {
                summaryHTML += `
                    <div class="disclaimer-item">
                        <h3>${disclaimer.title}</h3>
                        <p>${disclaimer.text}</p>
                    </div>
                `;
            });
            summaryHTML += '</div>';
            
            summaryHTML += `
                <div style="text-align: center;">
                    <button class="btn-print" onclick="window.print()">üñ®Ô∏è Print</button>
                    <button class="btn-restart" onclick="restart()">üîÑ New Interview</button>
                </div>
            `;
            
            summaryDiv.innerHTML = summaryHTML;
            summaryDiv.classList.add('active');
        }
        
        function restart() {
            currentQuestion = 0;
            currentDisclaimerIndex = 0;
            showingDisclaimers = false;
            answers = {};
            document.getElementById('summary').classList.remove('active');
            document.getElementById('questionsContainer').style.display = 'block';
            document.querySelector('.progress-bar').style.display = 'block';
            renderQuestion(0);
        }
        
        // Initialize
        renderQuestion(0);
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && e.ctrlKey) {
                if (showingDisclaimers) {
                    if (currentDisclaimerIndex < disclaimers.length - 1) {
                        nextDisclaimer();
                    } else {
                        showSummary();
                    }
                } else {
                    if (currentQuestion < totalQuestions - 1) {
                        nextQuestion();
                    } else {
                        startDisclaimers();
                    }
                }
            }
        });
    </script>
</body>
</html>
