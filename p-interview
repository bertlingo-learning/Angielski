            .container {
                box-shadow: none;
                padding: 20px;
            }
            
            button {
                display: none;
            }
            
            .progress-bar {
                display: none;
            }
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 30px 20px;
            }
            
            .question {
                font-size: 1.3em;
            }
            
            .navigation {
                flex-direction: column;
            }
            
            button {
                width: 100%;
            }
