        .summary {
            display: none;
        }
        
        .summary.active {
            display: block;
            animation: fadeIn 0.5s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .summary-item {
            margin-bottom: 20px;
            padding: 20px;
