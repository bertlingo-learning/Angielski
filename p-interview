        }
        
        .btn-next:hover {
            background-color: #357abd;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
        }
        
        .btn-finish {
            background-color: #27ae60;
            color: white;
        }
        
        .btn-finish:hover {
            background-color: #229954;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
        }
        
        .progress-bar {
            width: 100%;
